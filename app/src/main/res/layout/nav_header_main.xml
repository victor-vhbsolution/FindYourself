<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:weightSum="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary">

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/header_main_imgv_IMAGEM"
        android:src="@drawable/user_profile_picture"
        android:padding="16dp"
        android:paddingTop="20dp"
        android:scaleType="centerCrop"
        android:onClick="btnLoadUserProfilePicture"
        android:longClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Find Yourself"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:id="@+id/header_main_tv_NAME"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:paddingRight="8dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="findyoursel.app@gmail.com"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:id="@+id/header_main_tv_LOGIN"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" />

</LinearLayout>
